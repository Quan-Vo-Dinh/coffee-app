# Example environment variables for coffee-app
# Copy this file to `.env` and fill in real values for your environment.

# Database
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://db_user:db_password@localhost:5432/coffee_app_dev?schema=public"

APP_NAME="Coffee App"

# JWT / Tokens
ACCESS_TOKEN_SECRET="your-access-token-secret"
REFRESH_TOKEN_SECRET="your-refresh-token-secret"
ACCESS_TOKEN_EXPIRATION="15m"
REFRESH_TOKEN_EXPIRATION="7d"

# API keys & secrets
SECRET_API_KEY="your-secret-api-key"

# Security
SALT_ROUNDS="12"

# Server
PORT="3000"
NODE_ENV="development"

# Admin user (only for local/dev seeding)
ADMIN_NAME='admin'
ADMIN_PASSWORD='change_me'
ADMIN_EMAIL='admin@example.com'
ADMIN_PHONE_NUMBER='0123456789'

# OTP / Email
OTP_EXPIRATION_MINUTES=5
RESEND_API_KEY="your-resend-api-key"

# NOTE: Do NOT commit real secrets to version control. Use a secret manager or CI/CD
# environment variables for production deployments.
